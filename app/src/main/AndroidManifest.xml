<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="charusat.com.charusatcdpc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".dashboard.MainDashboard"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".authentication.SignUpActivityFirebase"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".authentication.LoginActivityFirebase"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".authentication.ResetPasswordActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".authentication.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".admin.PlacementData"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".admin.CdpcActivities"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".student.PersonalData"
            android:theme="@style/AppTheme" />
        <activity android:name=".student.AcademicData"></activity>
        <activity android:name=".student.ViewCompanyDetails" />
        <activity android:name=".dashboard.AdminDashboard">

        </activity>
        <activity android:name=".student.ViewStudentDetails"></activity>
        <activity android:name=".admin.ViewSelectedStudents"></activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".authentication.LogoutActivity" />
        <activity android:name=".admin.AddCompanyDetails" />

    </application>

</manifest>