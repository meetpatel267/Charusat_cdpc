<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    android:orientation="vertical"
    tools:context=".dashboard.MainDashboard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_add_personal_data"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_personal_data"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/circlebackgroundlightpink"
                                android:padding="10sp"
                                android:src="@drawable/ic_add_circle_outline_white_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="Personal Data"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="5sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="10sp"
                                android:text="Click to add personal  details"
                                android:textColor="@android:color/white" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_academic_data"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_academic_data"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/circlebackgroundpink"
                                android:padding="10sp"
                                android:src="@drawable/ic_dash_create_week_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:gravity="center"
                                android:text="Academic Data"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="1sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:text="Click to add academic \n details"
                                android:textColor="@android:color/white" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_company_details"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_company_details"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/circlebackgroundpurple"
                                android:padding="10sp"
                                android:src="@drawable/ic_today_menu_white_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="Company Details"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="5sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5sp"
                                android:text="View Company Details"
                                android:textColor="@android:color/white"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_view_details"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_view_details"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:background="@drawable/circlebackgroundgreen"
                                android:padding="8sp"
                                android:src="@drawable/ic_view_day_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:gravity="center"
                                android:text="View Details"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="5sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:text="Click to View Details"
                                android:textColor="@android:color/white" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_placement_data"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_placement_data"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/circlebackgrounddarkblue"
                                android:padding="10sp"
                                android:src="@drawable/ic_dash_check_week_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:gravity="center"
                                android:text="Placement Data"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="5sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5sp"
                                android:text="Check previous placements"
                                android:textColor="@android:color/white" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/dash_card_cdpc_activities"
                        android:layout_width="120sp"
                        android:layout_height="160sp"
                        android:layout_margin="10sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/redOpacity"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_cdpc_activities"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:background="@drawable/circlebackgroundorange"
                                android:padding="10sp"
                                android:src="@drawable/ic_notifications_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="CDPC Activities"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginBottom="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginTop="5sp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="10sp"
                                android:text="View CDPC Activites"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>


